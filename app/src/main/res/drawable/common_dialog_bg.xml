<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android"
       android:shape="rectangle" >
    <!-- 圆角 -->
    <corners android:radius="5dp" />
    <!-- 最小宽高 -->
    <size
        android:height="48dp"
        android:width="48dp" />
    <!-- 边线 -->
    <stroke
        android:width="1px"
        android:color="#a39f9f" />
    <!-- 颜色 -->
    <solid android:color="#ffffff" />
    <!-- 内部间距 -->
    <padding
        android:bottom="3dp"
        android:left="8dp"
        android:right="8dp"
        android:top="3dp" />
</shape>